<script is:inline>
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.getElementById('whatsapp-form');
		const nombreInput = document.getElementById('nombre');
		
		// N√∫mero de WhatsApp (actualizar con el n√∫mero real)
		const whatsappNumber = '573000000000';
		
		if (!form || !nombreInput) return;
		
		form.addEventListener('submit', (e) => {
			e.preventDefault();
			
			const nombre = nombreInput.value.trim();
			
			// Construir el mensaje predeterminado seg√∫n si hay nombre o no
			let mensajeCompleto;
			if (nombre) {
				mensajeCompleto = `Hola, mi nombre es ${nombre}`;
			} else {
				mensajeCompleto = 'Hola, me estoy interesado por tus servicios';
			}
			
			// Codificar el mensaje para URL
			const mensajeEncoded = encodeURIComponent(mensajeCompleto);
			
			// Abrir WhatsApp con el mensaje
			const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${mensajeEncoded}`;
			window.open(whatsappUrl, '_blank');
			
			// Limpiar el formulario despu√©s de enviar
			form.reset();
		});
	});
</script>
