	<script is:inline>
		// Cargar combos personalizados desde localStorage
		document.addEventListener('DOMContentLoaded', () => {
			const container = document.getElementById('custom-combos-container');
			const noCombosMessage = document.getElementById('no-combos-message');
			if (!container || !noCombosMessage) return;

			const stored = localStorage.getItem('upper-custom-combos');
			if (!stored) {
				noCombosMessage.classList.remove('hidden');
				return;
			}

			try {
				const combos = JSON.parse(stored);
				if (combos.length === 0) {
					noCombosMessage.classList.remove('hidden');
					return;
				}

				noCombosMessage.classList.add('hidden');
				container.innerHTML = combos.map((combo) => {
					const servicesList = combo.services.slice(0, 3).map(s => `<li class="flex items-start gap-1.5"><svg class="mt-0.5 h-2.5 w-2.5 flex-shrink-0 text-brand-amber" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg><span class="text-[11px] line-clamp-1">${s}</span></li>`).join('');
					const price = new Intl.NumberFormat('es-CO', { style: 'currency', currency: 'COP', maximumFractionDigits: 0 }).format(combo.price);
					return `
						<article class="group relative overflow-hidden rounded-[20px] border-2 border-brand-amber/40 bg-gradient-to-br from-brand-ink/80 to-brand-ink/60 p-1.5 shadow-xl backdrop-blur-xl transition-all duration-500 hover:border-brand-amber hover:shadow-[0_0_35px_rgba(247,148,31,0.4)] hover:scale-[1.02]">
							<div class="rounded-[18px] bg-gradient-to-br from-brand-ink/95 to-brand-night/95 p-5">
								<div class="mb-3 flex items-start justify-between gap-2">
									<div class="flex-1 min-w-0">
										<div class="mb-1.5 inline-flex rounded-full border border-brand-amber/60 bg-brand-amber/10 px-2 py-0.5 backdrop-blur">
											<p class="text-[10px] font-bold uppercase tracking-[0.12em] text-brand-amber">Personalizado</p>
										</div>
										<h3 class="mt-1.5 text-base font-black uppercase leading-tight text-brand-light line-clamp-1">${combo.name}</h3>
									</div>
									<button
										type="button"
										onclick="deleteCombo('${combo.id}')"
										class="flex-shrink-0 text-brand-light/30 hover:text-brand-amber transition p-1"
										aria-label="Eliminar combo"
									>
										<svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
										</svg>
									</button>
								</div>
								${combo.description ? `<p class="mb-3 text-xs leading-relaxed text-brand-light/70 line-clamp-2">${combo.description}</p>` : ''}
								<ul class="mb-3 space-y-1 text-[11px] text-brand-light/80">
									${servicesList}
									${combo.services.length > 3 ? `<li class="text-[10px] text-brand-light/50">+${combo.services.length - 3} más</li>` : ''}
								</ul>
								<div class="mb-3 flex items-center justify-between rounded-full border-2 border-brand-amber bg-brand-amber/20 px-3 py-1.5 backdrop-blur">
									<p class="text-xs font-black uppercase tracking-[0.15em] text-brand-amber">${price}</p>
								</div>
								<a
									href="https://wa.me/573000000000?text=Hola%20Upper,%20quiero%20reservar%20mi%20combo%20personalizado:%20${encodeURIComponent(combo.name)}"
									target="_blank"
									rel="noreferrer"
									class="group/btn relative inline-flex w-full items-center justify-center gap-1.5 overflow-hidden rounded-full border-2 border-brand-amber bg-brand-amber px-3 py-2 text-[10px] font-bold uppercase tracking-[0.25em] text-brand-ink shadow-lg shadow-brand-amber/50 transition-all duration-300 hover:scale-105 hover:shadow-[0_0_18px_rgba(247,148,31,0.6)]"
								>
									<span class="relative z-10">Reservar</span>
									<svg class="relative z-10 h-2.5 w-2.5 transition-transform duration-300 group-hover/btn:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
									</svg>
								</a>
							</div>
						</article>
					`;
				}).join('');
			} catch (e) {
				noCombosMessage.classList.remove('hidden');
			}
		});

		function deleteCombo(comboId) {
			if (!confirm('¿Estás seguro de que quieres eliminar este combo?')) return;
			const stored = localStorage.getItem('upper-custom-combos');
			if (!stored) return;
			try {
				const combos = JSON.parse(stored);
				const filtered = combos.filter(c => c.id !== comboId);
				localStorage.setItem('upper-custom-combos', JSON.stringify(filtered));
				location.reload();
			} catch (e) {
				console.error('Error al eliminar combo:', e);
			}
		}
	</script>
